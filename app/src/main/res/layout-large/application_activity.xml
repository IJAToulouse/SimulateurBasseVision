<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RadioGroup
        android:layout_width="229dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|left">

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Acuité visuelle"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_flou"
                android:layout_gravity="left" />

            <Spinner
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_distance"
                android:layout_gravity="right" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Pathologie"
            android:id="@+id/textView_pathologie"
            android:textStyle="bold"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aucune"
            android:id="@+id/radioButton_aucune"
            android:layout_marginLeft="20dp"
            android:textSize="18dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scotome"
            android:id="@+id/radioButton_scotome"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:textSize="18dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_scotome"
            android:splitTrack="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vision Tubulaire"
            android:id="@+id/radioButton_visionTubulaire"
            android:layout_marginLeft="20dp"
            android:textSize="18dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_visionTubu"
            android:progress="100"
            android:splitTrack="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Contraste"
            android:id="@+id/textView_contraste"
            android:textStyle="bold"
            android:textSize="20dp"
            android:editable="false" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_contraste"
            android:progress="50"
            android:splitTrack="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Luminosité"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textSize="20dp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_luminosite"
            android:progress="50"
            android:splitTrack="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="65dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appliquer"
            android:id="@+id/button_appliquer"
            android:layout_gravity="center|bottom" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <Button
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:text="Importer"
                android:id="@+id/button_importer"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:text="Exporter"
                android:id="@+id/button_exporter"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

    </RadioGroup>

    <ImageView
        android:layout_width="1046dp"
        android:layout_height="672dp"
        android:id="@+id/image"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="0" />

</LinearLayout>