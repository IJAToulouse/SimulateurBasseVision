<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RadioGroup
        android:layout_width="229dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|left"
        android:id="@+id/radioGroup">

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Acuité visuelle"
            android:id="@+id/textView_acuite"
            android:textStyle="bold"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_acuite"
                android:layout_gravity="right"
                android:spinnerMode="dropdown"
                android:entries="@array/acuite_arrays"/>

            <Spinner
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_distance"
                android:layout_gravity="right"
                android:spinnerMode="dropdown"
                android:entries="@array/distance_arrays"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Champ visuel"
            android:id="@+id/textView_champVisuel"
            android:textStyle="bold"
            android:textSize="20dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:id="@+id/radioButton_normal"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scotome"
            android:id="@+id/radioButton_scotome"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:textSize="18dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_scotome"
                android:splitTrack="false"
                android:layout_weight="0.06" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/textView_scotome"
                android:layout_gravity="center_vertical|right" />
        </LinearLayout>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vision Tubulaire"
            android:id="@+id/radioButton_tubulaire"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:checked="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_tubulaire"
                android:progress="100"
                android:splitTrack="false"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="100"
                android:id="@+id/textView_tubu"
                android:layout_gravity="center_vertical|right" />
        </LinearLayout>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hémianopsie"
            android:id="@+id/radioButton_hemianopsie"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:checked="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_hemia"
                android:progress="100"
                android:splitTrack="false"
                android:layout_weight="1"
                android:indeterminate="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="100"
                android:id="@+id/textView_hemia"
                android:layout_gravity="center_vertical|right" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Contraste"
            android:id="@+id/textView_contraste"
            android:textStyle="bold"
            android:textSize="20dp"
            android:editable="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_contraste"
                android:progress="100"
                android:splitTrack="false"
                android:layout_weight="1"
                android:indeterminate="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="100"
                android:id="@+id/textView_contraste_sb"
                android:layout_gravity="center_vertical|right" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="  Luminosité"
            android:id="@+id/textView_luminosite"
            android:textStyle="bold"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_luminosite"
                android:progress="0"
                android:splitTrack="false"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="50"
                android:id="@+id/textView_luminosite_sb"
                android:layout_gravity="center_vertical|right" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appliquer"
            android:id="@+id/button_appliquer"
            android:layout_gravity="center|bottom" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:weightSum="1">

            <Button
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:text="Importer"
                android:id="@+id/button_importer"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:text="Exporter"
                android:id="@+id/button_exporter"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

    </RadioGroup>

    <ImageView
        android:layout_width="1046dp"
        android:layout_height="672dp"
        android:id="@+id/image"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="0" />

</LinearLayout>